<%- include("partials/header.ejs", {title: "Login"}) %>

<%- include("partials/login_head.ejs") %>

<!--Login page displays a photo of random plate  and login form. User has to type their information such an email 
	and enter their password in order to use all app functionality.  -->
<br><br>
		<div class="container">
			<div class="row col-8 offset-2">
				<form action="/login" method="post">
					<div class="mb-3">
						<label for="email" class="form-label">Email address</label>
						<input type="email" class="form-control" id="email" name="email"/>

					</div>
					<div class="mb-3">
						<label for="password" class="form-label">Password</label>
						<input type="password" class="form-control" id="password" name="password"/>
					</div>

					<button type="submit" class="btn btn-primary">Login</button>
				</form>
			</div>
		</div>
